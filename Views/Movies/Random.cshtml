@model Vidly.ViewModels.RandomMovieViewModel
@{
    ViewBag.Title = "Random";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    var className = Model.Customers.Count > 0 ? "popular" : null;
    //if count > 0 is popular else is null y no voy a tener la clase
    //la clase en el h2.
    // this is a way to render classes(className) dinamically.
}

<h2 class ="@className">@Model.Movie.Name</h2> 

@if (Model.Customers.Count == 0)
{
    <text>No one has rented this movie before.</text>
}
else
{
    <ul>
        @foreach (var customer in Model.Customers)
        {
            <li>@customer.Name</li>
        }
    </ul>
}
